@using ShoppingApplication.Models
@model User

@{
    ViewBag.Title = "Edit";
}

<h2>Edit User</h2>


<div class="container">
    <div class="col-lg-4 col-lg-push-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Edit User
                <div class="panel-body">
                    <form action="/User/Edit" method="post">

                        <br />
                        <div class="form-group">
                            <label>Id</label>
                            <input type="number" class="form-control" id="id" name="Id" value="@Model.Id">
                        </div>
                        <div class="form-group">
                            <label for="name">Name:</label>
                            <input type="text" class="form-control" id="name" name="Name" value="@Model.Name">
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" class="form-control" id="email" name="Email" value="@Model.Email">
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="text" class="form-control" id="password" name="Password" value="@Model.Password">
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="roleid">Role Id:</label>
                            <input type="number" class="form-control" id="roleid" name="RoleId" value="@Model.RoleId">
                        </div>
                        <br />
                        <button type="submit" class="btn btn-success">Submit</button>
                    </form>

                </div>

            </div>

        </div>


    </div>
</div>