@using ShoppingApplication.Models
@{
    ViewBag.Title = "Add";
    // Map the list of Roles for dropdown...
    List<Role> Roles = ViewBag.Roles as List<Role>;
}


<h2>Add Users</h2>

@* method="get" ka laganai k baad...
    https.//localhost:44301/Product/Add?email=lubnakhizar24%40gmail.com&password=1234
    '?' k baad wali value ko quere parameter kehtai ha*@
@*action="/Controller/Action"*@

<div class="container">
    <div class="col-lg-4 col-lg-push-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Add User
                <div class="panel-body">
                    <form action="/User/Add" method="post">

                        <div class="form-group">
                            <label for="name">Name:</label>
                            <input type="text" class="form-control" id="name" name="Name">
                        </div>
                        <br />
                        <input type="hidden" class="form-control" id="id" name="Id">
                        <br />
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" class="form-control" id="email" name="Email">
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="password" class="form-control" id="password" name="Password">
                        </div>
                        <br />
                        <div class="form-group">
                            <label>Role Id:</label>
                            <select name="RoleId" class="form-control">
                                <option >Select Role</option>
                                @foreach (var item in Roles)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                        <br />

                        <br />

                        <button type="submit" class="btn btn-success">Submit</button>
                    </form>

                </div>

            </div>

        </div>


    </div>
</div>


