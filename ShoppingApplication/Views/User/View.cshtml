@using ShoppingApplication.Models
@model User

@{
    ViewBag.Title = "View";
}

<h2>View Users</h2>



<div>

    <div class="container">
        <div class="panel panel-primary">
            <div class="panel-heading">Users </div>
            <div class="panel-body">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Password</th>
                            <th>RoleId</th>

                        </tr>
                    </thead>

                    <tbody>

                        <tr style="background-color:#a9e8f1">

                            <td>@Model.Id </td>
                            <td>@Model.Name</td>
                            <td>@Model.Email</td>
                            <td>@Model.Password</td>
                            <td>@Model.RoleId</td>
                           
                        </tr>

                    </tbody>
                </table>
            </div>

        </div>

    </div>
</div>