
@using ShoppingApplication.Models
@model List<Order>
@{
    ViewBag.Title = "Index";
}

<h2>Orders</h2>
<br />
<div>

    <div class="container">
        <div class="panel panel-primary">
            <div class="panel-heading">Orders (  <a href="/Order/Add" style="color:#2f107c"> <b>Add</b> </a>)</div>
            <div class="panel-body">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>DateTime</th>
                            <th>OrderStatusId</th>
                            <th>BuyerId</th>
                            <th>ProductId</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.Id </td>
                                <td>@item.DateTime</td>
                                <td>@item.OrderStatusId</td>
                                <td>@item.BuyerId</td>
                                <td>@item.ProductId</td>
                                <td>
                                    <a href="/Order/View/@item.Id"><span class="glyphicon glyphicon-eye-open"></span></a> |
                                    <a href="/Order/Edit/@item.Id"><span class="glyphicon glyphicon-edit"></span></a> |
                                    <a href="/Order/Delete/@item.Id"><span class="glyphicon glyphicon-trash"></span></a> |
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>
</div>



