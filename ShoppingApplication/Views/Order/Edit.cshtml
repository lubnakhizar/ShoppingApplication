@using ShoppingApplication.Models
@model Order

@{
    ViewBag.Title = "Edit";
    // Map the list of OrderStatus, product  and buyers for dropdown...
    List<Product> Products = ViewBag.Products as List<Product>;
    List<OrderStatus> OrderStatuses = ViewBag.OrderStatuses as List<OrderStatus>;
    List<User> Buyers = ViewBag.Buyers as List<User>;
}


<h2>Edit Order</h2>


<div class="container">
    <div class="col-lg-4 col-lg-push-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Edit Order
                <div class="panel-body">
                    <form action="/Order/Edit" method="post">

                        <br />
                        <div class="form-group">
                            <input type="hidden" class="form-control" id="id" name="Id" value="@Model.Id">
                        </div>
                        <div class="form-group">
                            <label>DateTime:</label>
                            <input type="datetime" class="form-control" id="datetime" name="DateTime" value="@Model.DateTime<">
                        </div>
                        <br />
                        <div class="form-group">
                            <label>OrderStatus:</label>
                            <select name="OrderStatusId" class="form-control">

                                @foreach (var item in OrderStatuses)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                        <br />
                        <div class="form-group">
                            <label>Buyer:</label>
                            <select name="BuyerId" class="form-control">
                                
                                @foreach (var item in Buyers)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Product Id:</label>
                            <select name="ProductId" class="form-control">
                              
                                @foreach (var item in Products)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                        <br />
                        <button type="submit" class="btn btn-success">Submit</button>
                    </form>

                </div>

            </div>

        </div>


    </div>
</div>