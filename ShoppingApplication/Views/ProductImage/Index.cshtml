

@using ShoppingApplication.Models
@model List<ProductImage>
@{
    ViewBag.Title = "Index";
}

<h2>ProductImages</h2>
<br />
<div>

    <div class="container">
        <div class="panel panel-primary">
            <div class="panel-heading">ProductImages (  <a href="/ProductImage/Add" style="color:#2f107c"> <b>Add</b> </a>)</div>
            <div class="panel-body">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>                            
                            <th>Image</th>                        
                            <th>ProductId</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.Id </td>                          
                                <td>@item.Image</td>                           
                                <td>@item.ProductId</td>
                                <td>
                                    <a href="/ProductImage/View/@item.Id"><span class="glyphicon glyphicon-eye-open"></span></a> |
                                    <a href="/ProductImage/Edit/@item.Id"><span class="glyphicon glyphicon-edit"></span></a> |
                                    <a href="/ProductImage/Delete/@item.Id"><span class="glyphicon glyphicon-trash"></span></a> |
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>
</div>



