@using ShoppingApplication.Models
@model ProductImage

@{
    ViewBag.Title = "Edit";
    List<Product> Products = ViewBag.Products as List<Product>;
}

<h2>Edit ProductImage</h2>


<div class="container">
    <div class="col-lg-4 col-lg-push-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Edit ProductImage
                <div class="panel-body">
                    <form action="/ProductImage/Edit" method="post">

                        <br />
                        <div class="form-group">
                            <input type="hidden" class="form-control" id="id" name="Id" value="@Model.Id">
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="image">Image:</label>
                            <input type="text" class="form-control" id="image" name="Image" value="@Model.Image">
                        </div>
                        <div class="form-group">
                            <label>Product Id:</label>
                            <select name="ProductId" class="form-control">                             
                                @foreach (var item in Products)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>

                        <br />
                        <button type="submit" class="btn btn-success">Submit</button>
                    </form>

                </div>

            </div>

        </div>


    </div>
</div>