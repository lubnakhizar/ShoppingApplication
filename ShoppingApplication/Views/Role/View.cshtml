@using ShoppingApplication.Models
@model Role

@{
    ViewBag.Title = "View";
}

<h2>View Roles</h2>



<div>

    <div class="container">
        <div class="panel panel-primary">
            <div class="panel-heading">Roles </div>
            <div class="panel-body">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                        </tr>
                    </thead>

                    <tbody>

                        <tr style="background-color:#a9e8f1">

                            <td>@Model.Id </td>
                            <td>@Model.Name</td>
                             

                        </tr>

                    </tbody>
                </table>
            </div>

        </div>

    </div>
</div>