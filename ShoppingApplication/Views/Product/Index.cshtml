

@using ShoppingApplication.Models
@model List<Product>
@{
    ViewBag.Title = "Index";
}

<h2>Products</h2>
<br />
<div>

    <div class="container">
        <div class="panel panel-primary">
            <div class="panel-heading">Products (  <a href="/Product/Add" style="color:#2f107c"> <b>Add</b> </a>)</div>
            <div class="panel-body">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                           @* <th>Image</th>*@
                            <th>SellerId</th>
                            <th>ProductStatusId</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.Id </td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                            @*    <td>@item.Image</td>*@
                                <td>@item.SellerId</td>
                                <td>@item.ProductStatusId</td>
                                <td>
                                    <a href="/Product/View/@item.Id"><span class="glyphicon glyphicon-eye-open"></span></a> |
                                    <a href="/Product/Edit/@item.Id"><span class="glyphicon glyphicon-edit"></span></a> |
                                    <a href="/Product/Delete/@item.Id"><span class="glyphicon glyphicon-trash"></span></a> |
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>
</div>



