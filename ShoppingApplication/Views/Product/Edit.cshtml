@using ShoppingApplication.Models
@model Product

@{
    ViewBag.Title = "Edit";
    List<ProductStatus> ProductStatuses = ViewBag.ProductStatuses as List<ProductStatus>;
    List<User> Sellers = ViewBag.Sellers as List<User>;
}

<h2>Edit Order</h2>


<div class="container">
    <div class="col-lg-4 col-lg-push-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Edit Order
                <div class="panel-body">
                    <form action="/Product/Edit" method="post">

                        <br />
                        <div class="form-group">
                            <input type="hidden" class="form-control" id="id" name="Id" value="@Model.Id">
                        </div>
                        <div class="form-group">
                            <label>Name:</label>
                            <input type="text" class="form-control" id="name" name="Name" value="@Model.Name">
                        </div>
                        <br />
                        <div class="form-group">
                            <label>Description:</label>
                            <input type="text" class="form-control" id="description" name="Description" value="@Model.Description">
                        </div>
                        <br />

                        <div class="form-group">
                            <label>Image:</label>
                            <input type="text" class="form-control" id="image" name="Image" value="@Model.Image">
                        </div>

                        <br />
                        <div class="form-group">
                            <label>Seller Id:</label>
                            <select name="SellerId" class="form-control">
                               
                                @foreach (var item in Sellers)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                        <br />
                        <div class="form-group">
                            <label>ProductStatus Id:</label>
                            <select name="ProductStatusId" class="form-control">

                                @foreach (var item in ProductStatuses)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                        <br />
                        <button type="submit" class="btn btn-success">Submit</button>
                    </form>

                </div>

            </div>

        </div>


    </div>
</div>